{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "removeComments": true,
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
